{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Edge against localhost",
      "type": "pwa-msedge",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "breakOnLoad": true,
      "runtimeArgs": ["--remote-debugging-port=9222"],
      "preLaunchTask": "next dev"
    }
  ]
}
